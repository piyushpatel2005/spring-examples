<configuration>
    <appender name="STDOUT" class="com.piyushpatel2005.boottest.SpringBootTestApplication">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%date [%thread] [%-5level] [%logger{40} - %message%n</pattern>
        </encoder>
    </appender>

    <logger name="com.piyushpatel2005" level="DEBUG" />
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>